    $ty:(Entry) next;

    next = uvec + size_entry (vector_read (uvec));
    if (next == fvec) {
        ret.tag = TAG_ENUM_NoMore;
        ret.NoMore = $exp:(());
    } else {
        ret.tag = TAG_ENUM_Next;
        ret.Next = uvec;
    }
    return ret;
}

