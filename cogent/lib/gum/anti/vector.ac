
$ty:((r, Vector))
$id:focus_vector ($ty:(#{ vec : Vector
                        , acc : a
                        , obsv : b
                        , f : FocusVectorFArg a b -> FocusVectorFRet r
                        }) args)
{
    $ty:((r, Vector)) ret;
    
    $ty:(FocusVectorFArg a b) farg;
    farg.hd = $exp:vector_header (args.vec);
    farg.uvec = (char*) args.vec + size_header ($exp:(()));
    farg.fvec = farg.uvec + size_vector (farg.hd);
    farg.acc = args.acc;
    farg.obsv = args.obsv;

    $ty:(FocusVectorFRet r) fret;
    fret = (($spec:(FocusVectorFArg a b -> FocusVectorFRet r)) args.f) (farg);

    ret.p1 = fret.res;
    ret.p2 = args.vec;
    return ret;
}

