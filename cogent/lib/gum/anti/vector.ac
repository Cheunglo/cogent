}

$ty:(#{suc : Bool, uvec : VectorUsed, fvec : VectorFree})
vector_append ($ty:(#{uvec : VectorUsed, fvec : VectorFree, obj : Entry!}) args)
{
    $ty:(#{suc : Bool, uvec : VectorUsed, fvec : VectorFree}) ret;

    void* fvec = args.fvec;

    // XXX: How do we know that the vector still has free slots to accommodate another
    // entry? I can't see the code neither in the C nor in the Cogent implementations of
    // BilbyFs. / zilinc
    memcpy (fvec, (void*) args.obj, size_entry (args.obj));

    ret.suc = $exp:(True);
    ret.uvec = args.uvec;
    ret.fvec = fvec + size_entry (args.obj);

    return ret;
}

